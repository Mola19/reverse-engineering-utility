{
	"compilerOptions": {
		/* - project options - */
		"module": "esnext",
		"removeComments": true,
		"rootDir": "src",
		"sourceMap": false,
		"target": "esnext",

		/* - strict checks - */
		"alwaysStrict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strict": true,
		"strictBindCallApply": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,

		/* - linter checks - */
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,

		/* - module resolution - */
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"types" : [ "node" ],

		"paths": {
			"$assets": [ "./src/assets" ],
			"$assets/*": [ "./src/assets/*" ],
			"$lib": [ "./src/lib" ],
			"$lib/*": [ "./src/lib/*" ],
			"$pages": [ "./src/pages" ],
			"$pages/*": [ "./src/pages/*" ],
			"$use": [ "./src/use" ],
			"$use/*": [ "./src/use/*" ],
			"$utils": [ "./src/utils" ],
			"$utils/*": [ "./src/utils/*" ],
			"$services": [ "./src/services" ],
			"$services/*": [ "./src/services/*" ]
		},

		/* - experimental - */
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,

		/* - advanced - */
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*.d.ts",
		"src/**/*.ts",
		"src/**/*.svelte",
		"../../types/**/*.d.ts"
	],
	"extends": "@tsconfig/svelte/tsconfig.json",
}
